@page "/test"

<PageTitle>Test - System Installer</PageTitle>

<div class="container">
    <div class="card">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Test Page</h2>
        
        <div class="alert alert-success">
            <h4 class="text-lg font-semibold mb-2">Test Page - Blazor is Working!</h4>
            <p class="mb-2">This is a simple test page to verify Blazor is rendering content.</p>
            <p class="font-semibold">Current time: <span class="text-blue-600">@DateTime.Now</span></p>
        </div>
        
        <div class="mt-6">
            <h5 class="text-lg font-semibold mb-3">Tailwind CSS Features</h5>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-blue-100 p-4 rounded-lg">
                    <h6 class="font-semibold text-blue-800">Responsive Grid</h6>
                    <p class="text-sm text-blue-600">This grid responds to screen size</p>
                </div>
                <div class="bg-green-100 p-4 rounded-lg">
                    <h6 class="font-semibold text-green-800">Color Utilities</h6>
                    <p class="text-sm text-green-600">Easy color management</p>
                </div>
                <div class="bg-purple-100 p-4 rounded-lg">
                    <h6 class="font-semibold text-purple-800">Spacing System</h6>
                    <p class="text-sm text-purple-600">Consistent spacing scale</p>
                </div>
            </div>
        </div>
    </div>
</div>
