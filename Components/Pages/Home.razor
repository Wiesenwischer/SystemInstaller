@page "/"
@using SystemInstaller.Application.Interfaces
@using SystemInstaller.Application.DTOs
@inject IInstallationApplicationService InstallationService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>System Installer - Dashboard</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="row">
            <div class="col-12">
                <h1>System Installer Dashboard</h1>
                <p class="lead">Manage your Docker environment installations from this central dashboard.</p>
            </div>
        </div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h4 class="card-title">@totalTasks</h4>
                <p class="card-text">Total Tasks</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h4 class="card-title">@completedTasks</h4>
                <p class="card-text">Completed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h4 class="card-title">@runningTasks</h4>
                <p class="card-text">Running</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h4 class="card-title">@failedTasks</h4>
                <p class="card-text">Failed</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Installation Tasks</h5>
                <a href="/installations" class="btn btn-primary">View All Tasks</a>
            </div>
            <div class="card-body">
                @if (recentTasks.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Environment</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var task in recentTasks)
                                {
                                    <tr>
                                        <td>@task.Name</td>
                                        <td>
                                            <span class="badge bg-secondary">@task.EnvironmentId</span>
                                        </td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(task.Status)">
                                                @task.Status
                                            </span>
                                        </td>
                                        <td>@task.CreatedAt.ToString("MMM dd, HH:mm")</td>
                                        <td>
                                            <a href="/installations/@task.Id" class="btn btn-sm btn-outline-primary">
                                                View Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <h6 class="text-muted">No installation tasks yet</h6>
                        <p class="text-muted">Create your first installation task to get started.</p>
                        <a href="/installations" class="btn btn-primary">Create Task</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<InstallationTaskResultDto> recentTasks = new();
    private int totalTasks = 0;
    private int completedTasks = 0;
    private int runningTasks = 0;
    private int failedTasks = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        var allTasks = await InstallationService.GetAllTasksAsync();
        var taskList = allTasks.ToList();
        recentTasks = taskList.Take(5).ToList();
        
        totalTasks = taskList.Count;
        completedTasks = taskList.Count(t => t.Status == Domain.ValueObjects.InstallationStatus.Completed);
        runningTasks = taskList.Count(t => t.Status == Domain.ValueObjects.InstallationStatus.Running);
        failedTasks = taskList.Count(t => t.Status == Domain.ValueObjects.InstallationStatus.Failed);
    }

    private string GetStatusBadgeClass(Domain.ValueObjects.InstallationStatus status)
    {
        return status switch
        {
            Domain.ValueObjects.InstallationStatus.Pending => "bg-secondary",
            Domain.ValueObjects.InstallationStatus.Running => "bg-warning",
            Domain.ValueObjects.InstallationStatus.Completed => "bg-success",
            Domain.ValueObjects.InstallationStatus.Failed => "bg-danger",
            Domain.ValueObjects.InstallationStatus.Cancelled => "bg-dark",
            _ => "bg-secondary"
        };
    }

    public void Dispose()
    {
        // No longer need to unsubscribe from events
    }
}
    </Authorized>
    <NotAuthorized>
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 text-center">
                <h1>System Installer</h1>
                <p class="lead">Willkommen beim System Installer Dashboard</p>
                <p>Bitte melden Sie sich an, um auf das Dashboard zuzugreifen.</p>
                <a href="/login" class="btn btn-primary">Anmelden</a>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
