@namespace SystemInstaller.Components.Layout

@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Routing

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">System Installer</a>
        <AuthorizeView>
            <Authorized>
                <div class="navbar-nav ms-auto">
                    <span class="navbar-text me-3">
                        Willkommen, @(context.User.Identity?.Name ?? "Benutzer")
                        @{
                            var userRole = "customer"; // Default role
                            if (context.User.IsInRole("admin"))
                            {
                                userRole = "admin";
                            }
                        }
                        <span class="badge bg-@(userRole == "admin" ? "danger" : "info") ms-2">@userRole</span>
                    </span>
                    <form method="post" action="/logout" class="d-inline">
                        <button type="submit" class="btn btn-outline-light btn-sm">Abmelden</button>
                    </form>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="installations">
                        <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Installations
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="environments">
                        <span class="bi bi-layers-fill-nav-menu" aria-hidden="true"></span> Umgebungen
                    </NavLink>
                </div>
                
                <AuthorizeView Roles="admin">
                    <Authorized Context="adminContext">
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="tenants">
                                <span class="bi bi-building-fill-nav-menu" aria-hidden="true"></span> Tenants
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <a class="nav-link" href="/Account/Login">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Anmelden
                    </a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

