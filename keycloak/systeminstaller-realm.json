{
  "realm": "systeminstaller",
  "displayName": "System Installer",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator role"
      },
      {
        "name": "customer",
        "description": "Customer role"
      }
    ]
  },
  "defaultRoles": ["customer"],
  "requiredCredentials": ["password"],
  "clients": [
    {
      "clientId": "systeminstaller-web",
      "name": "System Installer Web Application",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "your-client-secret",
      "redirectUris": [
        "http://localhost:8081/signin-oidc",
        "https://localhost:8081/signin-oidc"
      ],
      "webOrigins": [
        "http://localhost:8081",
        "https://localhost:8081"
      ],
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "publicClient": false,
      "frontchannelLogout": false
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "System",
      "lastName": "Administrator",
      "email": "admin@systeminstaller.local",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"]
    },
    {
      "username": "customer",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "Customer",
      "email": "customer@systeminstaller.local",
      "credentials": [
        {
          "type": "password",
          "value": "customer123",
          "temporary": false
        }
      ],
      "realmRoles": ["customer"]
    }
  ]
}
